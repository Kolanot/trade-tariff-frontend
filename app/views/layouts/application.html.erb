<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Trade Tariff | GOV.UK" %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'tariff-print', media: 'print' %>

    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'application', defer: true %>
    <%= yield :section_meta_tags %>
    <%= yield :head %>
  </head>
  <body class="citizen">
    <div id="wrapper" class="tariff">
      <section id="content" role="main" class="group">
        <%= render 'shared/header' %>
        <div data-pjax-container class="article-container group">
          <%= yield %>
        </div>
        <div id="search-controls">
          <div class="related-module">
            <%= link_to "View all Sections", sections_path %>
            <a href="#">A-Z index</a>
            <a data-skip-pjax href="#">How to use the trade tariff</a>
          </div>
            <%= simple_form_for @search, method: :get, url: perform_search_path, html: { class: 'tariff-search related-module' } do |f| %>
              <%= f.input :q, required: false, label: "Search the tariff",
                        input_html: {
                          name: 'q',
                          size: 15 } %>

              <%= f.button :submit, 'Search', class: 'button right' %>
            <% end %>

            <%= simple_form_for @tariff_date, method: :get, url: '', html: { class: 'date-filter-search related-module', id: 'date-filter' } do |f| %>
              <h2>This tariff applies</h2>
              <%= f.input :date, label: 'Date of Results', input_html: { class: 'date',
                                                                         size: 15,
                                                                         name: 'date',
                                                                         value: f.object.date.to_formatted_s(:default) },
                                                           label_html: { class: 'visuallyhidden' } %>

              <%= f.button :submit, 'Change', class: 'btn button right' %>
            <% end %>
        </div>
      </section>
    </div>
  </body>
</html>

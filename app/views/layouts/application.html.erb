<%= csrf_meta_tags %>
<%= stylesheet_link_tag 'tariff' %>

<div id='wrapper'>
  <section id="content" role="main" class="group ancillary section-page">
    <div class="section-container">
      <header class="page-header group">
        <hgroup>
          <h1>
            <span>Section</span>
            UK Trade Tariff
          </h1>
        </hgroup>
      </header>
      <div class="browse-sections core-content group">
        <%= simple_form_for @search, url: perform_search_path do |f| %>
          <fieldset>
            <%= f.input :q, required: false, label: 'Search' %>

            <%= f.button :submit, 'Search' %>
          </fieldset>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </section>
</div>

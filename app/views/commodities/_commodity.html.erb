<li<% if ! commodity.leaf? %> class="has_children"<% end %>>
  <% if commodity.leaf? %><a href="<%= commodity_path(commodity) %>" class="tooltip" aria-describedby="<%= commodity.code %>"><% end %>
  <span class="description" id="commodity-<%= commodity.short_code %>"><%= commodity %></span>
  <% if commodity.leaf? %>
    <span class="identifier" aria-describedby="commodity-<%= commodity.short_code %>">
      <span class="chapter-code"><%= commodity.chapter_code %></span>
      <span class="heading-code"><%= commodity.heading_code %></span>
      <%= commodity.display_short_code %>
    </span>
  <% end %>
  <% if commodity.children.any? %>
    <ul><%= render commodity.children %></ul>
  <% end %>
  <% if commodity.leaf? %>
    </a>
    <span class="rate"><%= commodity.third_country_duty_rate %></span>
    <div class="tooltip-description" role="tooltip" id="<%= commodity.code %>"><p>View full details</p></div>
  <% end %>
</li>

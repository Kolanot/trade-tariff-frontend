@mixin contain-float {
  zoom: 1;

  &:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
  }
}

.tariff .inner {
  padding: 0;
}

header.page-header hgroup h1 {
  padding-left: 0;

  span {
    color: #10370D;
  }

}

header.page-header {
  padding-bottom: 0;
  margin: 0;
  border-bottom: 0;

  hgroup {
    border-top-color: #7FB299;
  }
}

#new_commodity_search {
  position: absolute;
  right: 0;
  top: 0;
  background: #fff;
  width: 174px;
  padding: 5px 13px;
  font-size: 0.85em;

  .btn {
    background-color: #28a197;
    border-color: #28a197;
  }
}

#commodity_search_q {
  width: 8em;
}

#index {
  list-style-type:upper-roman
}

dl dl {
  margin-top: 0;
}

dt {
  float: left;
  width: 1.8em; // fix this, relative widths aren't going to work
  clear: left;
  text-align: center;
  display: block;
}

@mixin tariff-identifier {
  background: #CCE0D6;
  border-top: solid 1px #7FB299;
  border-right: solid 1px #7FB299;
}

dl.tariff-fragments dt {
  @include tariff-identifier;
}

dd {
  float: left;
  display: block;
  margin: 0;
  padding-left: 0.5em;
  width: 90%;
}

// this is so the children of this are cleared out left as the
// internal content is pushed over by the float
dd.section-heading {
  width: auto;
  float: none;
  padding-left: 0;
}

// this H1 is nested inside the DL for structural purposes
dl h1 {
  font-size: 100%;
  margin: 0;
  font-weight: normal;
  line-height: 1.5em;
  color: #333;
}

ul.commodities {
  list-style: none;
  margin-left: 0; // remove negative left margin
  padding-left: 0;

  li {
    display: block;
    border-bottom: solid 1px #EEE;
    margin: 0;
    @include contain-float;
    padding: 0;

    span {
      font-size: 0.85em;
      float: left;
      display: block;
    }

    span.identifier {
      @include tariff-identifier;
      float: right;
      border: 0;
      width: 4.0em;
      padding-left: 0.25em;
    }

    a {
      display: block;
      @include contain-float;
    }
  }

  li:last-child {
    border-bottom: 0;
  }

  ul {
    margin: 0;
    clear: both;
  }
}

.js-enabled li.has_children {
  background-image: url(<%= asset_path "expand-collapse-arrow.png" %>);
  background-position: 0 4px;
  background-repeat: no-repeat;
  margin-left: -0.5em;
  padding-left: 0.5em;
}

.js-enabled li.open {
  background-position: 0 -100px;
}